.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.total {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

.content {
  margin-bottom: 40rpx;
}

.row-data {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
}

.data-item {
  padding: 10rpx 0;
  display: flex;
}

.key {
  color: #666;
  margin-right: 20rpx;
  min-width: 150rpx;
}

.value {
  flex: 1;
  word-break: break-all;
}

.next-btn {
  margin-top: 40rpx;
  background: #007AFF;
  color: white;
  border-radius: 40rpx;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 30rpx;
}

.delete-icon {
  color: #FF3B30;
  font-size: 40rpx;
  font-weight: bold;
} 