.container {
  padding: 20rpx;
}


.content {
  margin-bottom: 40rpx;
  
}

.row-data {
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.row-item {
  font-size: 40rpx;
  line-height: 1.6;
  color: #333;
  padding: 10rpx 0;
  text-align: center;
}

.row-item:last-child {
  border-bottom: none;
}

.timer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.remembered {
  background: #34C759;
  color: #fff;
}

.not-remembered {
  background: #f5f5f5;
  color: #666;
}



/* 只添加 tabs 相关样式 */
.weui-tabs {
  width: 100%;
  background: #fff;
}

.weui-tabs-bar__wrp {
  width: 100%;
  background: #fff;
}

.weui-tabs-bar {
  display: flex;
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
}

.weui-tabs-bar__item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.weui-tabs-bar__title {
  color: #666;
  font-size: 28rpx;
  line-height: 88rpx;
  transition: color .3s;
}

.weui-tabs-bar__item_on .weui-tabs-bar__title {
  color: #07c160;
  font-weight: 500;
}

.weui-tabs-bar__item_on {
  position: relative;
}

.weui-tabs-bar__item_on::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
} 