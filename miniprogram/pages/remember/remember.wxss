.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.progress-container {
  margin-top: 20rpx;
}

.progress-bar {
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #007AFF;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
  text-align: right;
}

.content {
  margin-bottom: 40rpx;
}

.row-data {
  background: #f8f8f8;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.row-item {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.row-item:last-child {
  border-bottom: none;
}

.timer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.remembered {
  background: #007AFF;
  color: white;
}

.not-remembered {
  background: #FF3B30;
  color: white;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 30rpx;
}

.delete-icon {
  color: #FF3B30;
  font-size: 40rpx;
  font-weight: bold;
} 