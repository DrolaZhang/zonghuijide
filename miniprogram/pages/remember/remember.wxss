.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100vh;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0;
}

.row-data {
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.row-item {
  font-size: 40rpx;
  line-height: 1.6;
  color: #333;
  padding: 10rpx 0;
  text-align: center;
}

.row-item:last-child {
  border-bottom: none;
}

.timer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.button-group {
  margin-top: auto;  /* 移除上边距，让它紧跟内容 */
  padding: 40rpx;
  display: flex;
  gap: 30rpx;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 50rpx;
}

.action-btn {
  flex: 1;
  padding: 30rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.remembered {
  background: #34C759;
  color: #fff;
}

.not-remembered {
  background: #f5f5f5;
  color: #666;
}



/* 只添加 tabs 相关样式 */
.weui-tabs {
  width: 100%;
  background: #fff;
}

.weui-tabs-bar__wrp {
  width: 100%;
  background: #fff;
}

.weui-tabs-bar {
  display: flex;
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
}

.weui-tabs-bar__item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.weui-tabs-bar__title {
  color: #666;
  font-size: 28rpx;
  line-height: 88rpx;
  transition: color .3s;
}

.weui-tabs-bar__item_on .weui-tabs-bar__title {
  color: #07c160;
  font-weight: 500;
}

.weui-tabs-bar__item_on {
  position: relative;
}

.weui-tabs-bar__item_on::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.press-feedback {
  position: fixed;
  left: 50%;
  bottom: 140rpx;
  transform: translateX(-50%);
  height: 80rpx;
  opacity: 0;
  pointer-events: none;
  z-index: 1001;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 40rpx;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  
}

/* 文字内容 */
.press-feedback::before {
  content: attr(data-text);
}

/* 向右滑动时的样式 */
.press-feedback.show-right {
  animation: slideUp 0.6s ease-out;
  --feedback-text: '记住了';
}

/* 向左滑动时的样式 */
.press-feedback.show-left {
  animation: slideUp 0.6s ease-out;
  --feedback-text: '没记住';
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translate(-50%, 20rpx);
  }
  15% {
    opacity: 1;
    transform: translate(-50%, 0);
  }
  85% {
    opacity: 1;
    transform: translate(-50%, 0);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -20rpx);
  }
}