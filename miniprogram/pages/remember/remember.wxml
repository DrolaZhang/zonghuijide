<view class="container" 
      bindlongpress="onLongPress" bindtap="onShortPress">
  <view class="weui-tabs">
    <view class="weui-tabs-bar__wrp">
      <view class="weui-tabs-bar">
        <view class="weui-tabs-bar__item {{activeTab === 'learning' ? 'weui-tabs-bar__item_on' : ''}}" bindtap="switchTab" data-tab="learning">
          <view class="weui-tabs-bar__title">记忆中 {{remainingCount}}</view>
        </view>
        <view class="weui-tabs-bar__item {{activeTab === 'remembered' ? 'weui-tabs-bar__item_on' : ''}}" bindtap="switchTab" data-tab="remembered">
          <view class="weui-tabs-bar__title">已记住 {{rememberedCount}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="press-feedback {{isPressing ? 'show-' + flyDirection : ''}}">
     {{text}}
  </view>

  <view class="content" wx:if="{{currentRow.length > 0}}" style="--content-font-size: {{fontSize}}px;">
    <view class="row-data">
      <view wx:for="{{currentRow}}" wx:key="index" class="row-item">
        {{item}}
      </view>
    </view>
    <view class="timer">{{countdown}}s 后更新</view>
  </view>

  <!-- 设置按钮和菜单 -->
  <view class="settings-container" catchtap="toggleSettings">
    <view class="settings-button">
      <text>设置</text>
    </view>
    
    <!-- 展开菜单 -->
    <view class="settings-menu {{isSettingsOpen ? 'open' : ''}}">
      <view class="menu-item timer-setting">
        <view class="timer-header">
          <text>自动更新时间</text>
          <text class="timer-value">{{timerInterval}}秒</text>
        </view>
        <slider 
          min="1" 
          max="30" 
          step="1" 
          value="{{timerInterval}}" 
          block-size="20" 
          activeColor="#34C759"
          backgroundColor="#eee"
          bindchange="onTimerChange"
        />
      </view>
      <view class="menu-item mode-setting">
        <text>播放模式</text>
        <view class="mode-switch">
          <view class="{{playMode === 'loop' ? 'mode-active' : ''}}" 
                data-mode="loop" 
                bindtap="onModeChange">循环</view>
          <view class="{{playMode === 'random' ? 'mode-active' : ''}}" 
                data-mode="random" 
                bindtap="onModeChange">随机</view>
        </view>
      </view>
      <view class="menu-item font-setting">
        <view class="font-header">
          <text>内容字体大小</text>
          <text class="font-value">{{fontSize}}px</text>
        </view>
        <slider 
          min="12" 
          max="40" 
          step="1" 
          value="{{fontSize}}" 
          block-size="20" 
          activeColor="#34C759"
          backgroundColor="#eee"
          bindchange="onFontSizeChange"
        />
      </view>
    </view>
  </view>

</view>