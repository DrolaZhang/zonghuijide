<view class="container">
  <view class="header">
    <view class="title-row">
      <text class="title">{{jsonName}}</text>
    </view>
    
    <!-- 进度条 -->
    <view class="progress-container">
      <view class="progress-bar">
        <view class="progress-fill" style="width: {{(rememberedCount/total) * 100}}%"></view>
      </view>
      <text class="progress-text">{{rememberedCount}}/{{total}}</text>
    </view>
  </view>

  <view class="content" wx:if="{{currentRow.length > 0}}">
    <view class="row-data">
      <view wx:for="{{currentRow}}" wx:key="index" class="row-item">
        {{item}}
      </view>
    </view>
    <view class="timer">{{countdown}}s 后更新</view>
  </view>

  <view class="button-group">
    <button class="action-btn remembered" bindtap="onRemembered">记住了</button>
    <button class="action-btn not-remembered" bindtap="onNotRemembered">没记住</button>
  </view>
</view> 