.container {
  height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.fixed-upload {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.upload-shifted {
  top: 35%;
}

.upload-btn {
  width: 280rpx;
  height: 280rpx;
  background: rgba(0, 122, 255, 0.05);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.15);
  border: 1rpx solid rgba(0, 122, 255, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.upload-icon {
  font-size: 100rpx;
  color: #007AFF;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #007AFF;
}

.files-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  min-height: calc(100vh - 80rpx);
  width: 100%;
}

.files-section.empty {
  justify-content: center;
}

.file-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
}

.file-btn {
  width: 100%;
  min-width: 0;
  height: 160rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.file-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-bar {
  height: 6rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #34C759;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.file-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.file-btn {
  animation: fadeIn 0.3s ease-out forwards;
}

.file-btn:nth-child(2n) {
  animation-delay: 0.1s;
}

.file-btn:nth-child(3n) {
  animation-delay: 0.2s;
}

.file-btn:nth-child(4n) {
  animation-delay: 0.3s;
}

.fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 33.33vh;
  display: flex;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: transparent;
}

.weui-uploader {
  width: 100%;
  padding: 20rpx 0;
}

.weui-uploader__bd {
  display: flex;
  justify-content: center;
  width: 100%;
}

.weui-uploader__input-box {
  float: none;
  position: relative;
  margin: 0;
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 24rpx;
  background-color: #f5f5f5;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.weui-uploader__input-box:before,
.weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #666;
}

.weui-uploader__input-box:before {
  width: 4rpx;
  height: 80rpx;
}

.weui-uploader__input-box:after {
  width: 80rpx;
  height: 4rpx;
}

.weui-uploader__input-box:active {
  transform: scale(0.95);
  opacity: 0.9;
} 