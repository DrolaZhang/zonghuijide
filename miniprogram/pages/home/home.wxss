.container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.fixed-upload {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.upload-shifted {
  top: 35%;
}

.upload-btn {
  width: 280rpx;
  height: 280rpx;
  background: rgba(0, 122, 255, 0.05);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.15);
  border: 1rpx solid rgba(0, 122, 255, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.upload-icon {
  font-size: 100rpx;
  color: #007AFF;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #007AFF;
}

.files-section {
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  margin-top: auto;
  padding-top: 280rpx;
}

.has-files {
  opacity: 1;
  transform: translateY(0);
}

.file-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 40rpx;
}

.file-btn {
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  min-height: 160rpx;
  background: rgba(0, 122, 255, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.05);
  border: 1rpx solid rgba(0, 122, 255, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.file-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.progress-container {
  margin-top: auto;
}

.progress-bar {
  height: 6rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: #007AFF;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.file-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.file-btn {
  animation: fadeIn 0.3s ease-out forwards;
}

.file-btn:nth-child(2n) {
  animation-delay: 0.1s;
}

.file-btn:nth-child(3n) {
  animation-delay: 0.2s;
}

.file-btn:nth-child(4n) {
  animation-delay: 0.3s;
} 