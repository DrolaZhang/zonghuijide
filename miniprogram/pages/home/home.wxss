.container {
  min-height: 100vh;
  background: #f7f7f7;  /* 微信默认背景色 */
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.center-upload {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0;
}

.upload-btn {
  width: 240rpx;
  height: 240rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.upload-icon {
  font-size: 80rpx;
  color: #007AFF;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #333;
}

.files-section {
  margin-top: 60rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.file-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.file-btn {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  min-height: 160rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.file-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.file-count {
  font-size: 24rpx;
  color: #999;
  margin-top: auto;
}

.delete-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.delete-icon:active {
  background: rgba(0, 0, 0, 0.1);
}

/* 添加按钮点击效果 */
.upload-btn:active,
.file-btn:active {
  transform: scale(0.98);
  transition: transform 0.2s ease;
} 