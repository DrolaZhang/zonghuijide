<view class="container">
  <!-- 顶部描述区域 -->
  <view class="header">
    <view class="title">Excel 记忆助手</view>
    <view class="subtitle">上传Excel文件，开始你的记忆训练</view>
  </view>

  <!-- 中央上传按钮 -->
  <view class="center-upload">
    <view class="upload-btn" bindtap="chooseFile">
      <view class="upload-icon">+</view>
      <view class="upload-text">上传Excel</view>
    </view>
  </view>

  <!-- 文件网格 -->
  <view class="files-section" wx:if="{{fileList.length > 0}}">
    <view class="section-title">已上传文件</view>
    <view class="file-grid">
      <view 
        class="file-btn" 
        wx:for="{{fileList}}" 
        wx:key="jsonName"
        bindtap="goToRandomView" 
        data-file="{{item}}"
      >
        <view class="file-content">
          <text class="file-name">{{item.name}}</text>
          <text class="file-count">{{item.data.total}}条记录</text>
        </view>
        <view 
          class="delete-icon" 
          catchtap="deleteFile" 
          data-file="{{item}}"
        >×</view>
      </view>
    </view>
  </view>
</view> 