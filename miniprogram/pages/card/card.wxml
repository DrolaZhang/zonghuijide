<view class="container">
  <view class="header">
    <text class="title">卡片管理</text>
    <text class="count">共 {{cardCount}} 项</text>
  </view>

  <view class="card-list">
    <view 
      class="card-item {{selectedIndex === index ? 'selected' : ''}}" 
      wx:for="{{cards}}" 
      wx:key="index"
      catchtap="selectCard"
      data-index="{{index}}"
    >
      <text class="content">{{item.content[0]}} + {{item.content[1]}} </text>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="action-bar" wx:if="{{selectedIndex !== -1}}">
    <button class="action-btn delete" catchtap="deleteSelectedCard">删除</button>
    <button class="action-btn generate" catchtap="generateCard">生成卡片</button>
  </view>

</view>