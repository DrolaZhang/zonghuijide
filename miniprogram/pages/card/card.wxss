.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.count {
  color: #666;
  font-size: 28rpx;
}

.card-list {
  padding: 20rpx;
}

.card-item {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.card-item.selected {
  background: #34C759;
  /* border: 2rpx solid #34C759; */
  transform: scale(1.02);
  box-shadow: 0 4rpx 15rpx rgba(24, 144, 255, 0.2);
}

.item-content {
  width: 100%;
}

.item-row {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1.4;
}

.item-value {
  flex: 1;
  text-align: center;
  word-break: break-all;
  white-space: normal;
  line-height: 1.4;
  padding: 10rpx;
}

.content {
  font-size: 28rpx;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.action-btn.delete {

  left: 40rpx;

  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  z-index: 1000;
  width: 320rpx;
  height: 88rpx;
  border-radius: 10%;
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;

}

.action-btn.generate {
  right: 40rpx;
  position: fixed;
  bottom: 40rpx;
  z-index: 1000;
  width: 320rpx;
  height: 88rpx;
  border-radius: 10%;
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-card {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-input {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.add-btn {
  background: #1890ff;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}

.drop-zone {
  background: #f5f5f5;
  border: 2rpx dashed #ccc;
  padding: 40rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  transition: all 0.3s;
}

.drop-zone.drag-over {
  background: #e6f7ff;
  border-color: #1890ff;
}

.drop-hint {
  color: #999;
  font-size: 28rpx;
}

.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.preview-container.show {
  opacity: 1;
  visibility: visible;
}

.preview-image {
  width: 80%;
  max-height: 70vh;
  margin-bottom: 20rpx;
}

.preview-hint {
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}

.input-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.markdown-input {
  width: 100%;
  height: 1200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.generate-btn {
  background-color: #ff2442;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.preview-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.preview-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.save-btn {
  background-color: #ff2442;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.preview-hint {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.preview-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-image {
  width: 90%;
  max-height: 80vh;
  object-fit: contain;
}

.modal-hint {
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 20rpx;
  opacity: 0.8;
}